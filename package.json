{
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt",
    "export": "nuxt export",
    "generate": "nuxt generate",
    "link:check": "npm-link-check",
    "link:mijin": "npm link mijin --no-save && sed -i \"\" \"s|'mijin'|'mijin/src'|\" src/plugins/mijin.ts",
    "link:remove:mijin": "npm unlink mijin && npm install mijin --save-dev && sed -i \"\" \"s|'mijin/src'|'mijin'|\" src/plugins/mijin.ts",
    "lint": "npm run lint:js && npm run lint:style",
    "lint:js": "eslint --ext .js,.vue --ignore-path .gitignore .",
    "lint:style": "stylelint **/*.{vue,css} --ignore-path .gitignore",
    "start": "nuxt start",
    "test": "jest --passWithNoTests && npm run link:check"
  },
  "license": "MIT",
  "keywords": [
    "tailwindcss",
    "vue",
    "nuxt",
    "components",
    "ui framework",
    "component framework",
    "ui library",
    "component library"
  ],
  "config": {
    "nuxt": {
      "host": "0.0.0.0"
    }
  },
  "workspaces": [
    "src/*"
  ],
  "dependencies": {
    "nuxt": "^2.15.4",
    "nuxt-i18n": "^6.26.0",
    "vue-clipboard2": "^0.3.1"
  },
  "devDependencies": {
    "@nuxt/types": "^2.15.4",
    "@nuxt/typescript-build": "^2.1.0",
    "@nuxtjs/color-mode": "^2.0.5",
    "@nuxtjs/eslint-config": "^6.0.0",
    "@nuxtjs/eslint-config-typescript": "^6.0.0",
    "@nuxtjs/eslint-module": "^3.0.2",
    "@nuxtjs/sitemap": "^2.4.0",
    "@nuxtjs/stylelint-module": "^4.0.0",
    "@nuxtjs/svg": "^0.1.12",
    "@nuxtjs/tailwindcss": "^4.0.3",
    "@vue/test-utils": "^1.2.0",
    "autoprefixer": "^10.2.5",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.6.3",
    "eslint": "^7.25.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-import-resolver-nuxt": "^1.0.1",
    "eslint-plugin-nuxt": "^2.0.0",
    "highlight.js": "^10.7.2",
    "jest": "^26.6.3",
    "mijin": "^1.3.1",
    "node-sass": "^5.0.0",
    "npm-link-check": "^4.0.0",
    "postcss": "^8.2.13",
    "sass-loader": "^10.1.1",
    "stylelint": "^13.13.1",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-standard": "^22.0.0",
    "stylelint-order": "^4.1.0",
    "stylelint-scss": "^3.19.0",
    "tailwindcss": "^2.1.2",
    "ts-jest": "^26.5.5",
    "vue-form": "^4.10.3",
    "vue-jest": "^3.0.7"
  }
}
